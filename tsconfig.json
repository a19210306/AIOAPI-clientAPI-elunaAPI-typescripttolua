{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig.json to read more about this file */
    "target": "ESNext",
    "module": "commonjs",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "declaration": true,
    "strict": true,
    "rootDir": "./src/",
    "outDir": "./dist/",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "node_modules/@wartoshika/wow-declarations",
      "node_modules/lua-types/5.1",
      "node_modules/@types"
    ],
    "types": [
      "lua-types/5.1",
      "@wartoshika/wow-declarations"
    ]
  },
  "exclude": ["./transfrom"],
  "include": [
    "./@types/",
    "./src/",
    "./AIO",
    "./eluna"
  ],
  "tstl": {
    "luaTarget": "5.1",
    "luaPlugins": [ 
      {"name":"./transfrom/require.ts"}
    ],
  }
}

